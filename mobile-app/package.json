{
  "name": "typekeep-companion",
  "version": "3.1.0",
  "description": "TypeKeep Companion â€” Cross-device clipboard sync & typing history viewer",
  "author": {
    "name": "leothefleo49",
    "email": "leothefleo49@users.noreply.github.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/leothefleo49/TypeKeep.git"
  },
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:android": "npx cap sync android && npx cap open android",
    "build:ios": "npx cap sync ios && npx cap open ios"
  },
  "build": {
    "appId": "com.typekeep.companion",
    "productName": "TypeKeep Companion",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "app/**/*",
      "icon.*"
    ],
    "win": {
      "target": ["nsis", "portable"],
      "icon": "icon.png"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "icon.png"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    },
    "publish": null
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0"
  }
}
